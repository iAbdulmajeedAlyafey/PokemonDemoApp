<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- #################### TextView #################### -->
    <style name="AppWidget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:focusable">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AppWidget.TextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidget.TextView.Light">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- #################### Buttons #################### -->
    <style name="AppWidget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">@dimen/dim_8dp</item>
        <item name="cornerRadius">@dimen/dim_7dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:focusable">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">@dimen/dim_4dp</item>
        <item name="android:insetBottom">@dimen/dim_4dp</item>
    </style>

    <style name="AppWidget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:focusable">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- #################### Other Views #################### -->
    <style name="AppWidget.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:layout_height">@dimen/dim_50dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:paddingStart">-10dp</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

</resources>